@model BankDashboardViewModel

<style>
    /* Style for the button */
    .add-button {
        float: right;
        margin-top: -40px;
        margin-right: 10px;
    }

        /* Style for the button itself */
        .add-button button {
            background-color: lightgrey;
            color: white;
            border: none;
            height: 40px;
            width: 170px;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 20px; 
            transition: background-color 0.3s ease;
        }

            /* Hover effect */
            .add-button button:hover {
                background-color: darkgray; /* Darker background color on hover */
            }

    /* Improved table styles */
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 12px; /* Increased padding for better spacing */
        text-align: left;
        border-bottom: 1px solid #ddd; /* Lighter border color */
    }

    th {
        background-color: #3ca36b;
        color: white;
    }

    /* Alternate row color */
    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    /* Links in table cells */
    td a {
        color: #3ca36b; /* Blue color for links */
        text-decoration: none;
    }

        td a:hover {
            text-decoration: underline; /* Underline on hover */
        }

    .dashboard {
        background-color: #ffffff;
        border-radius: 5px;
        padding: 20px;
        margin-top: 0;
    }

    .dashboard h2 {
            color: #3ca36b;

        margin-top: 40px;
    }

    .dashboard-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .dashboard-table td {
            padding: 10px;
            border-bottom: 1px solid #3ca36b;
        }

            .dashboard-table td:first-child {
                font-weight: bold;
                width: 200px; /* Adjust the width as needed */
            }
</style>

</style>

</style>

<h2>Branches</h2>

<div class="add-button">
    <a href="/Bank/New/">
        <button>
            Add New Branch
        </button>
    </a>
</div>

<table>
    <thead>
        <tr>
            <th>Branch Name</th>
            <th>Location</th>
            <th>Branch Manager</th>
            <th>Employee Count</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bankBranch in Model.BranchList)
        {
            <tr>
                <td>
                    <a href="/Bank/Details/@bankBranch.id">@bankBranch.name</a>
                </td>
                <td>@bankBranch.location</td>
                <td>@bankBranch.branchManager</td>
                <td>@bankBranch.employeeCount</td>
                <td>
                    <a href="/Bank/Edit/@bankBranch.id">Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="dashboard">
    <h2>Bank Dashboard</h2>
    <table class="dashboard-table">
        <tr>
            <td>Total Branches</td>
            <td>@Model.TotalBranches</td>
        </tr>
        <tr>
            <td>Total Employees</td>
            <td>@Model.TotalEmployees</td>
        </tr>
        <tr>
            <td>Branch with Most Employees</td>
            <td>@Model.BranchWithMostEmployees?.name</td>
        </tr>
    </table>
</div>






