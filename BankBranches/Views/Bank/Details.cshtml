@model BankBranches.Models.BankBranch

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <style>
        /* Add your CSS styles here */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h2 {
            color: #007bff;
        }

        dl {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 10px;
        }

        dt {
            font-weight: bold;
        }

        .icon {
            width: 20px;
            height: 20px;
            vertical-align: middle;
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Branch Details</h2>
        <div>
            <h4>Branch</h4>
            <hr>
            <dl>
               <dt>Branch Name</dt>
               <dd>@Model.id</dd>

                <dt>Employee Count</dt>
                <dd>@Model.employeeCount</dd>

                <dt>Branch Manager</dt>
                <dd>@Model.branchManager</dd>

                <dt>Location</dt>
                <dd>@Model.location <img src="location-icon.png" alt="Location Icon" class="icon"></dd>
            </dl>
        </div>
    </div>
</body>
</html>
